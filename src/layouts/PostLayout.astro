---
import Layout from "./Layout.astro";
const { frontmatter } = Astro.props;
---

<Layout title="blog">
  <!-- ... -->
  <div class="flex flex-col text-xl gap-5 items-center justify-center">
    <div class="w-full">
      <img src={frontmatter.image.src} alt={frontmatter.image.alt} />
    </div>
    <div class="w-full my-8">
      <slot />
    </div>
    <!-- Markdown content is injected here -->
  </div>
  <!-- ... -->
</Layout>

<style is:inline>
  h1 {
    font-size: 34px;
    margin-bottom: 25px;
    font-weight: bolder;
  }
  h2 {
    font-size: 28px;
    font-weight: bold;
  }
</style>
